<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity=""
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/lyimg"
        android:layout_width="375dp"
        android:layout_height="248dp"
        android:layout_margin="20dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="162dp"
            android:layout_height="match_parent"
            android:background="@color/green"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgpersona"
                android:layout_width="138dp"
                android:layout_height="223dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="@color/black" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="189dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:background="@color/green"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="174dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/rol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity=""
                    android:textColor="@color/green"

                    android:textSize="20dp"
                    tools:text="Administrativo" />

            </LinearLayout>

            <TextView
                android:id="@+id/nombre"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="57dp"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@+id/imgpersona"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Leidy Johana ospina Garcia" />

            <TextView
                android:id="@+id/cargo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@+id/imgpersona"
                app:layout_constraintTop_toBottomOf="@+id/nombre"
                tools:text="Aris" />

            <TextView
                android:id="@+id/correo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginTop="10dp"
                android:layout_marginBottom="70dp"
                android:textColor="@color/white"
                android:textSize="12dp"
                app:layout_constraintStart_toEndOf="@+id/imgpersona"
                app:layout_constraintTop_toBottomOf="@+id/cargo"
                tools:text="Aris" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="376dp"
        android:layout_height="74dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lyimg">

        <TextView
            android:id="@+id/descripcion"
            android:layout_width="266dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:textColor="@color/green"
            android:textSize="13dp"
            tools:text="Dar soporte técnico a equipos de cómputo" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              android:textColor="@color/green"
            android:backgroundTint="@color/white"
            android:text="BORRAR :("
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgpersona" />
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>

